<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Loading message -->
        <TextView
            android:id="@+id/tvLoadingMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading order details..."
            android:textAlignment="center"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Map showing route -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapOrderRoute"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp" />

        <!-- Order details section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDetailOriginCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin: City A"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailDestinationCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination: City B"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: 0.0 km"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $100.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailTruckType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Truck Type: Medium"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume: 10 mÂ³"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight: 500 kg"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Action buttons section -->
        <Button
            android:id="@+id/btnDetailAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Order"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDetailReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject Order"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDetailStartDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Delivery"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDetailCompleteDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Delivery"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDetailContactCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Customer"
            android:backgroundTint="#673AB7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDetailCancelDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Delivery"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>