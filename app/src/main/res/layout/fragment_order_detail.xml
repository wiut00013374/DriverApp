<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:osm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Origin City -->
        <TextView
            android:id="@+id/tvDetailOriginCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin City: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Origin Address -->
        <TextView
            android:id="@+id/tvDetailOriginAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin Address: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Destination City -->
        <TextView
            android:id="@+id/tvDetailDestinationCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination City: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Destination Address -->
        <TextView
            android:id="@+id/tvDetailDestinationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Address: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Truck Type -->
        <TextView
            android:id="@+id/tvDetailTruckType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truck Type: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Volume -->
        <TextView
            android:id="@+id/tvDetailVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Weight -->
        <TextView
            android:id="@+id/tvDetailWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Map View -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapOrderRoute"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
